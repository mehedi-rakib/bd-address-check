{
  "name": "bd-address-check",
  "version": "1.0.0",
  "description": "A lightweight Bangladeshi district, upazila, and postcode validator.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy:css",
    "copy:css": "mkdir -p dist/components && cp src/components/AddressForm.css dist/components/AddressForm.css",
    "build:ui": "tsc && tailwindcss -i ./src/components/AddressForm.css -o ./dist/components/AddressForm.css --minify",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "bangladesh",
    "address",
    "validator",
    "district",
    "upazila",
    "postcode"
  ],
  "author": "Mehedi Rakib",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mehedi-rakib/bd-address-check.git"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
